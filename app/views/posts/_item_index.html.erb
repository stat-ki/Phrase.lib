<table>
    <thead>
        <tr>
            <th>画像</th>
            <th>商品名</th>
            <th>価格</th>
        </tr>
    </thead>
    <tbody>
        <% items.each do |item| %>
            <tr>
                <td><%= image_tag "#{item.small_image_urls[0]}",class: "rakuten_image" %></td>
                <td><%= link_to item.name, "#{item.url}" %></td>
                <td><%= number_with_delimiter(item.price) %></td>
            </tr>
        <% end %>
    </tbody>
</table>