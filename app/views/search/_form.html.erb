<div class="form-group">
    <%= form_with(url: search_result_path, local: true, class: "navbar-form") do |f| %>
        <p id="search-introduction">検索項目を選んでください：　</p>
        <%= f.select(:search_model, [["ユーザー名", :user_name], ["フレーズ", :phrase]], {include_blank: true}) %>
        <p id="search-description">検索ワードを入力してください：　</p>
        <%= f.text_field(:search_word, class: "form-control", placeholder: "キーワード") %>
        <%= f.submit("検索する", class: "btn btn-default center-block", id: "search-submit") %>
    <% end %>
</div>

<style>
    #search-description, #search_word, #search-submit {
        display: none;
    }

    #search-introduction, #search-description {
        font-size: 11px;
    }
</style>