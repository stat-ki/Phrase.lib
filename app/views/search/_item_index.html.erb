<table class="table">
    <thead>
        <tr>
            <th class="col-xs-3">画像</th>
            <th class="col-xs-6">商品名</th>
            <th class="col-xs-3">価格</th>
        </tr>
    </thead>
    <tbody>
        <% items.each do |item| %>
            <tr>
                <td><%= image_tag("#{item.small_image_urls[0]}", class: "rakuten_image") %></td>
                <td><%= link_to(item.name, "#{item.url}", target: :_blank) %></td>
                <td>¥<%= number_with_delimiter(item.price) %></td>
            </tr>
        <% end %>
    </tbody>
</table>