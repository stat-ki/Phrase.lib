<div class="row">
  <h2 class="text-center">新規登録</h2>
</div>
<div class="row text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-xs-12 devise-form">
      <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-6" %>
    </div>
    <div class="col-xs-12 devise-form">
      <%= f.label :password, "パスワード", class: "col-xs-3" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "最低６文字必要です", class: "col-xs-6" %>
    </div>
    <div class="col-xs-12 col-xs-12 devise-form">
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-xs-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-6" %>
    </div>
    <div class="col-xs-12 devise-form">
      <%= f.label :name, "ユーザー名", class: "col-xs-3" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-xs-6"%>
    </div>
    <div class="col-xs-12 devise-form">
      <%= f.submit "アカウントを作成", class: "btn btn-success" %>
    </div>
  <% end %>
  <p>or</p>
  <%= render("/devise/shared/sns_links") %>
</div>
