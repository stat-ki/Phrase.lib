<div class="row">
  <h2>新規登録</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-5" %>
  </div>

  <div class="row">
    <%= f.label :password, "パスワード", class: "col-xs-3" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "最低６文字必要です", class: "col-xs-5" %>
  </div>

  <div class="row">
    <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-xs-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-5" %>
  </div>

  <div class="row">
    <%= f.label :name, "アカウント名", class: "col-xs-3" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-xs-5"%>
  </div>

  <div class="row">
    <%= f.submit "アカウントを作成", class: "btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>