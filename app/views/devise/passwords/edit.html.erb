<div class="row">
  <h2 class="text-center">パスワードの再設定</h2>
</div>
<div class="row text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
    <div class="col-xs-12 devise-form">
      <%= f.label :password, "パスワード", class: "col-xs-3" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "最低６文字必要です", class: "col-xs-6" %>
    </div>
    <div class="col-xs-12 col-xs-12 devise-form">
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-xs-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-6" %>
    </div>
    <div class="col-xs-12 devise-form">
      <%= f.submit "変更する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
