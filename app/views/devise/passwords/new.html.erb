<div class="row">
  <h2 class="text-center">パスワード再設定用のメールを送信する</h2>
</div>
<div class="row text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-xs-12 devise-form">
      <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)mail@example.com", class: "col-xs-6" %>
    </div>
    <div class="col-xs-12 devise-form">
      <%= f.submit "送信する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>